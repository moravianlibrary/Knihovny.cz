<?php
  // Set page title.
  $recordId = $this->driver->getUniqueId();
  $this->headTitle($this->translate('Institutions') . ': ' . $this->driver->getBreadcrumb());
  $records = $this->driver->tryMethod('getDeduplicatedRecords') ?? [];
  $results = [];
  foreach ($records as $source => $ids) {
    foreach ($ids as $id) {
      $results[] = [
        'label' => $this->transEsc('Source::' . $source),
        'id' => $id,
        'source' => $source,
        'index' => 0,
      ];
    }
  }
  uasort($results, function ($a, $b) {
    $result = $this->sorter()->compare($a['label'], $b['label']);
    if ($result == 0) {
      $result = $a['id'] <=> $b['id'];
    }
    return $result;
  });
  $prev = null;
  $index = 0;
  foreach ($results as &$rec) {
    if ($prev != null && $rec['source'] == $prev['source']) {
      $index = ($index == 0) ? 2 : $index + 1;
      if ($prev['index'] == 0) {
        $prev['index'] = 1;
      }
    } else {
      $index = 0;
    }
    $rec['index'] = $index;
    $prev = &$rec;
  }
?>
<?php if (!empty($results)): ?>
  <h3><?=$this->transEsc('Institutions')?></h3>
  <div class="list-group">
    <?php foreach ($results as $record): ?>
      <a class="list-group-item list-group-item-action<?=($record['id'] == $recordId) ? ' active' : '' ?>" href="<?=$this->escapeHtmlAttr($this->recordLinker()->getUrl($record['id']))?>">
        <?=$record['label']?>
        <?php if ($record['index'] > 0): ?>
          - <?=$this->transEsc('record') . ' ' . $record['index']?>
        <?php endif; ?>
        <?php if ($record['id'] == $recordId):?>
          (<?=$this->transEsc('current record')?>)
        <?php endif; ?>
      </a>
    <?php endforeach; ?>
  </div>
<?php endif; ?>
