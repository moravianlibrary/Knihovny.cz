    $items = $this->driver->getItems('core');
    $dbLabel = $this->driver->getDbLabel();
    $customLinks = $this->driver->getCustomLinks();
    $accessLevel = $this->driver->getAccessLevel();
    $restrictedView = empty($accessLevel) ? false : true;
